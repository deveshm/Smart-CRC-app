
<%= form_for [@installation,@alert] do |f| %>

<%= render 'shared/error_messages' , object: f.object %>


<div class="row span12">
    <%= f.label :note , "Note"%>
    <%= f.text_area :note, class: "span11" %>

<div class="row">
	<%= f.submit "Save" ,class: "btn btn-large btn-primary", id: "update_alert" %>
	<%= link_to "Cancel",    cancel_path, id: "alert_edit_cancel" , class: 'btn btn-large'%>
	<% end %>
</div>
</div>